using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication11
{
    class Program
    {
        static void Main(string[] args)
        {
            int a;
            Console.Write("enter number: ");
            a = int.Parse(Console.ReadLine());

            if (a < 10 && a % 2 == 0)
            {
                Console.WriteLine("true!");
            }
            Console.ReadKey();
        }
    }
}
